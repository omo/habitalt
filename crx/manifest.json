{
  "name": "Habitalt",
  "version": "0.1",
  "manifest_version": 2,
  "description": "A site blocking tool which helps your self reflection.",
  "browser_action": {
    "default_icon": "icon.png"
  },

 "options_page": "options.html",
 "background": {
    "page": "background.html"
  },
  "permissions": [
    "webRequest", "webRequestBlocking", "tabs", "background", "http://*/*", "https://*/*"
  ]
}